#!/bin/bash

name=retrosmart-openbox
themes=()

function makefile {

echo include makefile.mk

for i in $(cat src/theme.ini| grep -F [ | tr -d [ | tr -d ])
do
    test $i == DEFAULT && continue
    themes+=($name-$i)
    echo $name-$i:
    echo -e '\t'python3 src/mkobt.py -c 'src/theme.ini' -i 'src/pixmaps' -t $i -n '$(EXECUTABLE_NAME)'
done

echo '$(EXECUTABLE_NAME)': ${themes[*]}
}

makefile > makefile
